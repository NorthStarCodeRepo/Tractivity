<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Tractivity.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Tractivity"
    xmlns:views="clr-namespace:Tractivity.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Export">
            <ShellContent ContentTemplate="{DataTemplate views:ExportLogsView}" />
        </Tab>
    </TabBar>
</Shell>